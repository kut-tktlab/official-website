@font-face
  font-family: 'Noto Sans Japanese'
  font-style: normal
  font-weight: normal
  src: url('//fonts.gstatic.com/ea/notosansjapanese/v6/NotoSansJP-Light.woff2') format('woff2'),
    url('//fonts.gstatic.com/ea/notosansjapanese/v6/NotoSansJP-Light.woff') format('woff'),
    url('//fonts.gstatic.com/ea/notosansjapanese/v6/NotoSansJP-Light.otf') format('opentype')

@font-face
  font-family: 'Noto Sans Japanese'
  font-style: normal
  font-weight: bold
  src: url('//fonts.gstatic.com/ea/notosansjapanese/v6/NotoSansJP-Bold.woff2') format('woff2'),
    url('//fonts.gstatic.com/ea/notosansjapanese/v6/NotoSansJP-Bold.woff') format('woff'),
    url('//fonts.gstatic.com/ea/notosansjapanese/v6/NotoSansJP-Bold.otf') format('opentype')

fortablet()
  @media screen and (min-width: 768px)
    {block}

clearfix()
  &:after
    content: ''
    display: block
    clear: both

*
  margin: 0
  padding: 0
  line-height: 1
  box-sizing: border-box
  -webkit-text-size-adjust: none

body
  font-size: 14px
  font-family: 'Noto Sans Japanese', sans-serif

article
  line-height: 1.7

p
  margin-bottom: 16px
  line-height: 1.7

h1
  margin-top: 26px
  margin-bottom: 12px
  font-weight: bold
  font-size: 24px
  letter-spacing: 3px

  +fortablet()
    font-size: 44px

h2
  margin-top: 22px
  margin-bottom: 16px
  letter-spacing: 3px
  font-size: 18px

  +fortablet()
    font-size: 24px

h3
  margin-bottom: 10px
  padding-bottom: 4px
  border-bottom: 1px dotted rgba(0,0,0,0.2)
  font-weight: normal
  font-size: 18px

a
  color: #4D5500

.row
  clearfix()
  margin-right: -16px

  > .col-half-tablet
    padding-right: 16px
    padding-bottom: 16px

    +fortablet()
      width: 50%
      float: left

  > .col-third-tablet
    padding-right: 16px
    padding-bottom: 16px

    +fortablet()
      width: 33.3333%
      float: left

  &:last-child
    > .col-half-tablet
      &:last-child
        padding-bottom: 0

.main-article
  position: relative

  &:before
    content: ''
    position: absolute
    display: block
    width: 100%
    height: 100%
    left: 0
    top: 0
    z-index: -2
    background:
      url("/images/primary-background.png") left top / 150% no-repeat

    -webkit-filter: brightness(2.3) contrast(2)
    filter: brightness(2.3) contrast(2)

  &:after
    content: ''
    position: absolute
    display: block
    width: 100%
    height: 100%
    left: 0
    top: 0
    z-index: -1
    background: url("/images/yellow-bg.png")
    opacity: 0.9

.primary-article
  padding: 16px 26px

  +fortablet()
    padding: 27px 47px

.sub-article
  padding: 18px 18px 20px
  background-color: rgba(#fff, 0.95)

  p
    margin-bottom: 0
    line-height: 1.4

.js-showing
  display: block !important

.js-hidden
  display: none !important

.mobile-hidden
  display: none

  +fortablet()
    display: block

.navbar
  clearfix()
  position: fixed
  width: 100%
  background-color: rgba(#fff, 1)
  box-shadow: 0 1px 2px rgba(#000, 0.3)
  z-index: 1

.navbar-nav
  list-style-type: none
  list-style-position: inside

  +fortablet()
    display: block !important

    > li
        float: left

.navbar-logo
  padding: 14px 26px;
  float: left;
  line-height: 1

.collapsed-menu-btn
  padding: 25px 26px
  font-size: 20px
  float: right
  transition: 0.25s background-color ease

  &:hover
    background-color: rgba(0, 0, 0, 0.1)

  +fortablet()
    display: none

.navbar-menu
  clear: both
  position: fixed
  border-top: 1px solid rgba(0, 0, 0, 0.1)
  top: 64px
  left: 0
  width: 100%
  height: 100%
  z-index: 1
  background-color: rgba(#fff, 0.95)

  +fortablet()
    clear: none
    float: right
    position: fixed
    border-top-style: none
    top: auto
    left: auto
    right: 0
    width: auto
    margin-right: 16px
    background-color: transparent

  > li
    border-bottom: 1px solid rgba(0, 0, 0, 0.1)

    > a
      display: inline-block
      padding: 16px 26px
      width: 100%
      color: #242424
      text-decoration: none
      line-height: 1
      transition: 0.25s background-color ease

      &:hover
        background-color: rgba(0, 0, 0, 0.1)

    +fortablet()
      border-bottom-style: none

      > a
        padding: 25px 10px

.small
  font-size: 50%

.wide-text
  letter-spacing: 0.2em

.bars-icon
  display: block
  width: 18px
  height: 14px

  > .line
    display: block
    width: 100%
    height: 1px
    margin-bottom: 5px
    background-color: rgba(#000, 0.6)

    &:last-child
      margin-bottom: 0

.close-icon
  display: block
  position: relative
  width: 18px
  height: 14px

  > .line-1
  > .line-2
    display: block
    position: absolute
    top: 6px
    left: 1px
    width: 100%
    height: 1px
    background-color: rgba(#000, 0.6)

  > .line-1
    transform: rotate(45deg)

  > .line-2
    transform: rotate(-45deg)

.message
  position: relative
  height: 300px

  +fortablet()
    height: 360px

  &:before
    content: ''
    position: absolute
    width: 100%
    height: 100%
    z-index: -1
    background: url('/images/20150618-1.jpg')
    background-position: center center
    background-size: cover
    -webkit-filter: blur(5px) brightness(1.4)
    filter: blur(5px) brightness(1.4)

  > .message-inner
    position: relative
    top: 116px
    margin: 0 auto
    width: 60%
    min-width: 280px
    padding: 20px 12px 24px
    font-size: 26px
    background-color: rgba(#fff, 0.9)
    text-align: center;

    +fortablet()
      margin-left: 24px
      padding: 16px 26px 22px 26px
      font-size: 48px
      text-align: left
      top: 182px
      width: 520px

  .primary, .secondary
    margin: 0
    line-height: 1.36

  .secondary
    margin-top: 0.2em

.detail-link
  display: block
  margin-top: 16px
  margin-bottom: 16px
  padding-top: 15px
  padding-bottom: 15px
  text-align: center
  font-size: 20px

.activity-item
  > a
    position: relative
    display: block
    text-decoration: none
    color: #fff
    z-index: 1

    &:after
      content: ''
      display: block
      left: 0
      top: 0
      width: 100%
      height: 100%
      z-index: 1
      position: absolute
      background-color: rgba(255, 255, 255, 0)
      transition: background-color 0.2s ease

    &:hover
      &:after
        background-color: rgba(255, 255, 255, 0.4)

      .activity-item-header
        background-color: rgba(0, 0, 0, 0.6)
        height: 64px

      .activity-item-header-inner
        bottom: 7px

.activity-item-header
  position: absolute
  bottom: 0
  width: 100%
  height: 51px
  background-color: rgba(0, 0, 0, 0.6)
  transition: height 0.1s ease-in
  z-index: 2

.activity-item-header-inner
  padding: 8px 18px
  position: absolute
  bottom: 0
  width: 100%
  transition: bottom 0.1s ease-in

  > h3
    margin-bottom: 0
    padding-bottom: 0
    border-style: none
    line-height: 1.2
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    width: 100%

  > time
    display: block
    margin-bottom: 2px
    font-size: 12px

.activity-item-image
  overflow: hidden

  > img
    width: 100%
